<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    <EditText
        android:id="@+id/editElejido"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:ems="10"
        android:hint="Seleccione su Sistema Operativo "
        android:inputType="textPersonName" >
        <requestFocus />
    </EditText>
    <Button
        android:id="@+id/btnAndroid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editElejido"
        android:layout_marginTop="20dp"
        android:text="Sistema Operativo Android" />
    <Button
        android:id="@+id/btnIphone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/btnAndroid"
        android:layout_below="@+id/btnAndroid"
        android:layout_marginTop="19dp"
        android:text="Sistema Operativo Iphone" />
    <Button
        android:id="@+id/btnSymbian"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/btnIphone"
        android:layout_marginTop="16dp"
        android:text="Sistema Operativo Symbian" />
    <Button
        android:id="@+id/btnRim"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/btnSymbian"
        android:layout_marginTop="24dp"
        android:text="Sistema Operativo RIM" />
    <Button
        android:id="@+id/btnWindow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/btnRim"
        android:layout_marginTop="26dp"
        android:text="Sistema Operativo Window Mobile" />
</RelativeLayout>
